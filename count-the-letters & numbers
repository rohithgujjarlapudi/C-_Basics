#include <iostream>
#include <string>
using namespace std;

int main() {
  string input;
  int countnum,countletter,countspaces;
  countnum= 0;
  countletter = 0;
  countspaces = 0;
  cout<<"Enter the input: ";
  cin>>input;
  for(int i = 0; i<input.length();i++){
    if((input[i]=='1') || (input[i]=='2') || (input[i]=='3') || (input[i]=='4') || (input[i]=='5') || (input[i]=='6') || (input[i]=='7') || (input[i]=='8') || (input[i]=='9') || (input[i]=='0')){
      countnum++;
    }
    else if(input[i] == ' '){
      countspaces++;
    }
    else{
      countletter++;
      
    }
    }
    cout<<"number of letters "<<countletter<<endl;
    cout<<"number of numbers "<<countnum<<endl;
    
    return 0;
    }
